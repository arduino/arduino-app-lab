{
  "name": "@bcmi-labs/arduino-sass",
  "version": "1.4.1",
  "description": "Sass styles for Arduino websites",
  "license": "GPL-3.0-only",
  "files": [
    "index.scss",
    "/src"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:bcmi-labs/cloud-editor-mono.git"
  },
  "scripts": {
    "build": "rimraf build && npm run build-scss",
    "build-scss": "sass --load-path=node_modules --embed-sources --style=expanded index.scss:build/index.css",
    "lint": "stylelint index.scss src/",
    "prepare": "husky install"
  },
  "author": "Christian Sarnataro <c.sarnataro@arduino.cc>",
  "contributors": [
    "Stefania Mellai (original author)",
    "Christian Sarnataro <c.sarnataro@arduino.cc>"
  ],
  "bugs": {
    "url": "https://github.com/bcmi-labs/cloud-editor-mono/issues"
  },
  "homepage": "https://github.com/bcmi-labs/cloud-editor-mono#readme",
  "lint-staged": {
    "src/*.scss": "stylelint"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "rimraf": "3.0.2",
    "sass": "^1.54.9",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-scss": "^4.3.0"
  }
}
